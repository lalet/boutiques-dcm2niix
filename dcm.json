{
    "tool-version": "1.0", 
    "name": "Boutiques dcm2niix", 
    "command-line": "dcm2niix [INPUT_FOLDER] [OUTPUT_FOLDER]", 
    "inputs":[
        {
            "description":"input folder", 
            "value-key": "INPUT_FOLDER", 
            "type": "File", 
            "optional": false, 
            "id": "input_dir", 
            "name": "Dicom Image Folder"
        },
        {   
            "description":"output folder", 
            "value-key": "OUTPUT_FOLDER", 
            "type": "File", 
            "optional": false, 
            "id": "output_dir", 
            "name": "Nifti Image Folder"
        } 
    ], 
    "container-image": {
        "image": "laletscaria/boutiques-dcm2niix:latest", 
        "type": "docker"
    }, 
    "schema-version": "0.5", 
    "output-files":[ 
        {   
	    "id":"output_dir",
            "name": "Results",
            "description":"input folder",
	    "path-template": "OUTPUT_FOLDER", 
            "optional": false
        }
    ], 
    "suggested-resources": {
        "walltime-estimate": 25200
    }, 
    "description": "Dicom to nifti boutiques descriptor"
}
